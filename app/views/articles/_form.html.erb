<%= form_with(model:@article, local:true) do |f| %>

  <p>
  <%= f.label :title %>
  <%= f.text_field :title %>
  </p>

  <p>
  <%= f.label :description %>
  <%= f.text_area :description %>
  </p>
  
  <p>
  <%= f.label :categories %>
  <%= f.collection_select(:category_ids, Category.all, :id, :name,
  {prompt: "Make selection"},{multiple: true}) %> 
  </p>
  
  <p>
  <%= f.submit %>
  </p>
<% end %>
