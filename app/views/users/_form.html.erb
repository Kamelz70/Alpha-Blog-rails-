<%= form_with(model:@user, local:true) do |f| %>
  
  <p>
  <%= f.label :username %>
  <%= f.text_field :username %>
  </p>

  <p>
  <%= f.label :email %>
  <%= f.text_field :email %>
  </p>
  <p>
  <%= f.label :password %>
  <%= f.text_field :password %>
  </p>
  
  <p>
  <%= f.submit(@user.new_record? ? "SignUp" : "Edit User") %>
  </p>
<% end %>
