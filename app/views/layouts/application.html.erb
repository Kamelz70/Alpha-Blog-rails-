<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "custom", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
  
<div style="text-align:center;margin:2rem auto">
<%= link_to 'home', root_path %>
<%= link_to 'Articles', articles_path %>
<% if logged_in? %>
<%= "Admin" if current_user.admin? %><%= link_to current_user.username, user_path(current_user) %>
<%= link_to 'Logout', logout_path, data: { "turbo-method": :delete } %>

<% else %>
<%= link_to 'SignUp', signup_path %>
<%= link_to 'Login', login_path %>

<% end %>
<%= link_to 'Categories', categories_path %>

<% if logged_in? && current_user.admin? %>
<%= link_to "Create Category", new_category_path %>
<% end %>

<%= link_to 'Users Index', users_path %>
<%= link_to 'About', about_path %>
</div>

  <div style="text-align:center;">
  <%= render 'layouts/messages' %>
  <%= yield %>
  </div>
  </body>
</html>
