<h1>Create New Article</h1>

<% if @article.errors.any? %>
  <h2>An error Occurred</h2>
  <% @article.errors.full_messages.each do |msg| %>
    <p><%= msg %></p>
  <% end %>
<% end %>
<%= form_with scope: :article, url: articles_path, local:true do |f| %>

  <p>
  <%= f.label :title %>
  <%= f.text_field :title %>
  </p>

  <p>
  <%= f.label :description %>
  <%= f.text_area :description %>
  </p>
  
  <p>
  <%= f.submit %>
  </p>
<% end %>